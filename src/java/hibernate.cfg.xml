<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/softwart</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="model/mapping/Comentario.hbm.xml"/>
    <mapping resource="model/mapping/Tag.hbm.xml"/>
    <mapping resource="model/mapping/Sistema.hbm.xml"/>
    <mapping resource="model/mapping/Publicacion.hbm.xml"/>
    <mapping resource="model/mapping/Usuario.hbm.xml"/>
    <mapping resource="model/mapping/Sancion.hbm.xml"/>
    <mapping resource="model/mapping/Evento.hbm.xml"/>
    <mapping resource="model/mapping/Voto.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
